<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContinueApp"
    android:background="@drawable/indianflag" >

    <Button
        android:id="@+id/pciscore"
        android:layout_width="157dp"
        android:layout_height="140dp"
        android:background="@drawable/rounded_corner"
        android:text="PAVEMENT CONDITION INDEX"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198" />

    <Button
        android:id="@+id/iri"
        android:layout_width="157dp"
        android:layout_height="140dp"
        android:background="@drawable/rounded_corner"
        android:onClick="iriClicked"
        android:text="@string/international_roughness_index"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pciscore"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198" />

    <Button
        android:id="@+id/ssi"
        android:layout_width="157dp"
        android:layout_height="140dp"
        android:background="@drawable/rounded_corner"
        android:onClick="siiClicked"
        android:text="@string/social_importance_index"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pciscore"
        app:layout_constraintVertical_bias="0.471" />

    <Button
        android:id="@+id/bbd"
        android:layout_width="157dp"
        android:layout_height="140dp"
        android:background="@drawable/rounded_corner"
        android:onClick="bbdClicked"
        android:text="@string/benkelman_beam_deflection"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/ssi"
        app:layout_constraintTop_toBottomOf="@+id/iri"
        app:layout_constraintVertical_bias="0.469" />

    <Button
        android:id="@+id/priorityScore"
        android:layout_width="157dp"
        android:layout_height="140dp"
        android:background="@drawable/round"
        android:onClick="priorityFinalClicked"
        android:text="PRIORITY          SCORE"
        android:textColor="#FFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

</androidx.constraintlayout.widget.ConstraintLayout>