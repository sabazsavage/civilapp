<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aec.civilapp.Benkel"
    android:background="@drawable/gradient2">

    <Button
        android:id="@+id/directbbd"
        android:layout_width="293dp"
        android:layout_height="90dp"
        android:background="@drawable/buttoncolor"
        android:onClick="bbddirectClicked"
        android:text="@string/direct"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271" />

    <Button
        android:id="@+id/indirectbbd"
        android:layout_width="293dp"
        android:layout_height="90dp"
        android:layout_marginTop="52dp"
        android:text="@string/indirect"
        android:background="@drawable/buttoncolor"
        android:textSize="22sp"
        android:onClick="indBbdClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/directbbd"
        app:layout_constraintVertical_bias="0.006" />

    <TextView
        android:id="@+id/bbdtxt"
        android:layout_width="283dp"
        android:layout_height="52dp"
        android:text="@string/choose_one_of_the_methods"
        android:textColor="#151113"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/directbbd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>