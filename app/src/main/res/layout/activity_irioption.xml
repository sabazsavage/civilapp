<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".irioption"
    android:background="@drawable/gradient2">

    <Button
        android:id="@+id/directmethod"
        android:layout_width="293dp"
        android:layout_height="90dp"
        android:text="@string/direct_method"
        android:background="@drawable/buttoncolor"
        android:textSize="18sp"
       android:onClick="directIriClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />

    <Button
        android:id="@+id/indirectmethod"
        android:layout_width="293dp"
        android:layout_height="90dp"
        android:layout_marginTop="376dp"
        android:text="@string/indirect_method"
        android:background="@drawable/buttoncolor"
        android:textSize="18sp"
        android:onClick="indirectIriClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/selecttxt"
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:text="@string/choose_and_go"
        android:textColor="#0B0A0A"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />
</androidx.constraintlayout.widget.ConstraintLayout>